<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_50"
    android:id="@+id/activity_register_tank"
    tools:context=".ui.fragment.StoreFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:background="#CCFFFFFF"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_tank_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_semibold"
            android:gravity="center_vertical"
            android:paddingVertical="10dp"
            android:text="Registra tu balón"
            android:textColor="@color/blue_400"
            android:textSize="23sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/quicksand_regular"
                android:textColor="@color/black"
                android:text="Marca"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="3dp"
                android:layout_weight="2"
                android:background="@drawable/spinner_background"
                android:entries="@array/marcas_disponibles" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/quicksand_regular"
                android:text="Tipo de válvula"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="3dp"
                android:layout_weight="2"
                android:background="@drawable/spinner_background"
                android:entries="@array/tipos_valvula_disponibles" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/quicksand_regular"
                android:text="Peso"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="3dp"
                android:layout_weight="2"
                android:background="@drawable/spinner_background"
                android:entries="@array/pesos_disponibles" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="194dp"
                android:layout_weight="4"
                android:background="@color/transparent" />

            <Button
                android:id="@+id/btn_add_tank"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:theme="@style/Button.Custom"
                android:gravity="center"
                android:insetLeft="10dp"
                android:insetRight="10dp"
                android:text="Registrar"
                android:textAllCaps="false"
                android:textSize="22sp"
                app:cornerRadius="10dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>