<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.dialog.PromocionesDialogFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/blue_400"
        android:elevation="6dp"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/img_home_logo"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/transparent"
            android:src="@drawable/logo01" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Promociones"
            android:textStyle="bold"
            android:textSize="17sp"
            android:fontFamily="@font/quicksand_regular"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="-90dp"
            android:gravity="center"
            android:textColor="@color/white_50"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Salir"
            android:src="@drawable/ic_cerrar"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="-120dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/promociones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">


            <androidx.cardview.widget.CardView
                android:id="@+id/cardProm1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardUseCompatPadding="true"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/empresa1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/solgas" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp">

                        <TextView
                            android:id="@+id/promocion1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20% De Descuento"
                            android:fontFamily="@font/quicksand_regular"
                            android:textColor="@color/naranja_500"
                            android:layout_marginTop="5dp"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/desprom1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Obtén un 25% de descuento en todos nuestros productos."
                            android:textSize="13dp"
                            android:layout_marginRight="20dp" />

                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardProm2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardUseCompatPadding="true"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/empresa2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/llamagas" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp">

                        <TextView
                            android:id="@+id/promocion2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25% De Descuento"
                            android:fontFamily="@font/quicksand_regular"
                            android:textColor="@color/naranja_500"
                            android:layout_marginTop="5dp"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/desprom2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Obtén un 25% de descuento en todos nuestros productos."
                            android:textSize="13dp"
                            android:layout_marginRight="20dp" />

                    </LinearLayout>
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardProm3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardUseCompatPadding="true"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/empresa3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/newgas" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp">

                        <TextView
                            android:id="@+id/promocion3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30% De Descuento"
                            android:fontFamily="@font/quicksand_regular"
                            android:textColor="@color/naranja_500"
                            android:layout_marginTop="5dp"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/desprom3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aprovecha un 30% de descuento en tu pedido total."
                            android:textSize="13dp"
                            android:layout_marginRight="20dp" />

                    </LinearLayout>
                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>
</LinearLayout>