<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddsensorActivity">

    <ImageView
        android:id="@+id/img_redsensor_logo"
        android:layout_width="110dp"
        android:layout_height="43dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo02" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentoContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/ayuda"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/question"
        app:layout_constraintStart_toEndOf="@+id/img_redsensor_logo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lbl_redsensor_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="164dp"
        android:fontFamily="@font/quicksand_regular"
        android:text="Sensor"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_redsensor_calibrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:background="@drawable/boton_calibrar"
        android:fontFamily="@font/quicksand_semibold"
        android:text="Registar balÃ³n"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:paddingHorizontal="20dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_redsensor_subtitulo" />

    <ImageView
        android:id="@+id/img_redsensor_ss"
        android:layout_width="36dp"
        android:layout_height="68dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo01" />

    <TextView
        android:id="@+id/lbl_redsensor_codigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="164dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="AQ58"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/lbl_redsensor_titulo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lbl_redsensor_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="172dp"
        android:fontFamily="@font/quicksand_semibold"
        android:text="red"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/lbl_redsensor_codigo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lbl_redsensor_subtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/quicksand_regular"
        android:text="Conectar su sensor a WiFi"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_redsensor_titulo" />

    <ImageView
        android:id="@+id/img_redsensor_flecha"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/lbl_redsensor_subtitulo"
        app:layout_constraintTop_toBottomOf="@+id/lbl_redsensor_red"
        app:srcCompat="@drawable/flecha" />

    <ImageView
        android:id="@+id/img_redsensor_wifi"
        android:layout_width="28dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="168dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/lbl_redsensor_red"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/wifi_gris" />

</androidx.constraintlayout.widget.ConstraintLayout>